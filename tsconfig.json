{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "isolatedModules": true
  },
  "include": ["src/**/*", "src/**/*.hbs"],
  "exclude": ["node_modules", "dist", "e2e", "test"]
} 